</head>

<body class="animsition">
    <section>
        <!-- Header -
            <!-- Header desktop -->
        <div class="container-menu-header">
            <div class="wrap_header">
                <!-- Logo -->
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <h3><span class="glyphicon glyphicon-glass"></span> Shitblerje Shishe Vererash <span class="glyphicon glyphicon-glass"></span></h3>
                </a>
                <!-- Menu -->
                <div class="wrap_menu">
                    <nav class="menu">
                        <ul class="main_menu">
                            <li style="display:inline-block;">
                                <span class="glyphicon glyphicon-home"></span>  <a href="@Url.Action("Index", "Home")">Home</a>
                            </li>
                            @if (Request.IsAuthenticated)
                            {
                                using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <li>
                                        @Html.ActionLink("Hello " + Session["UserName"] + "!", null, null, routeValues: null, htmlAttributes: new { style = "display:inline-block;" })
                                    </li>
                                    <li>
                                        <a href="@Url.Action("myshoppingcart","ShoppingCart")" style="display:inline-block;"><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart </a>
                                    </li>
                                        <li><a href="javascript:document.getElementById('logoutForm').submit()" style="display:inline-block;">Log Out</a></li>
                                }
                            }
                            else
                            {
                                <li>
                                    <a href="@Url.Action("myshoppingcart","ShoppingCart")"><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart </a>
                                </li>
                                <li><a href="@Url.Action("Registration","Account")"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                                    <li><a href="@Url.Action("Login","Account")"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>

                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <br /><br /> <br /><br /><br /><br /><br />
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <h4>Lost Password</h4>
                        </div>
                        <div class="login-form">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()
                                <div>
                                        @if (TempData["reset"] != null)
                                        {
                                            <label style="color:maroon;"> @TempData["reset"] </label>
                                            <br /><br />
                                        }
                                        <div class="form-group">
                                            <label>Email Adress :</label>
                                            @Html.TextBox("Email",null, new {  @placeholder = "Email", @class = "au-input au-input--full"  }) 
                                        </div>
                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Submit</button>
                              </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="/template1/vendor/jquery-3.2.1.min.js"></script>
