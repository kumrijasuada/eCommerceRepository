
@model ShisheVere.Models.Kategori


<div class="modal-header">
    <h3 class="modal-title" id="exampleModalCenterTitle">Delete</h3>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Kategori", new { id = Model.Id_kategori }))
{

    @Html.AntiForgeryToken()
    <div class="modal-body">
        <strong>ARE YOU SURE ?</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input type="submit" class="btn btn-secondary" value="Yes">
        <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
    </div>
}
